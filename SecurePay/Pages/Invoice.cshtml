@page
@{
    ViewData["Title"] = "Create Invoice";
}

<h1>Create Invoice</h1>

<form asp-controller="Invoice" asp-action="GenerateInvoice" method="post">
    <div>
        <label for="invoiceDetails">Invoice Details:</label>
        <textarea id="invoiceDetails" name="invoiceDetails" rows="4" cols="50"></textarea>
    </div>
    <br />
    <button type="submit">Generate Invoice</button>
</form>

